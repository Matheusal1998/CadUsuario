@model IEnumerable<Teste_CRUD.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form action="@Url.Action("Index", "Usuario")" method="post">
    <label>Pesquisar</label>
    <input type="text" name="busca" />
    <input type="submit" />
</form>
  
<p>
    <a asp-action="Criar">Crie um novo usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>

                <td>
                    @Html.ActionLink("Editar", "Editar", new { item.Id }) |
                    @Html.ActionLink("Detalhes", "Detalhe", new { item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
